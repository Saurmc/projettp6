{% extends 'base.html.twig' %}

{% block title %}À propos - {{ entreprise.nom }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="about-section">
        <div class="text-center mb-4">
            {% if entreprise.logo %}
                <img src="{{ asset('uploads/logos/' ~ entreprise.logo) }}" alt="Logo {{ entreprise.nom }}" class="company-logo">
            {% else %}
                <div class="company-logo placeholder">
                    <i class="fas fa-building fa-3x text-secondary"></i>
                </div>
            {% endif %}
            <h1 class="mb-4">À propos de {{ entreprise.nom }}</h1>
        </div>

        <div class="company-info">
            <div class="section">
                <h3><i class="fas fa-info-circle me-2"></i>Notre entreprise</h3>
                <p class="lead">{{ entreprise.description ?: 'Description non disponible' }}</p>
            </div>

            <div class="section">
                <h3><i class="fas fa-map-marked-alt me-2"></i>Informations de contact</h3>
                <div class="info-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>{{ entreprise.adresse ?: 'Adresse non renseignée' }}</span>
                </div>
                {% if entreprise.siteWeb %}
                    <div class="info-item">
                        <i class="fas fa-globe"></i>
                        <a href="{{ entreprise.siteWeb }}" target="_blank" class="text-decoration-none">{{ entreprise.siteWeb }}</a>
                    </div>
                {% endif %}
                <div class="info-item">
                    <i class="fas fa-envelope"></i>
                    <span>{{ entreprise.email }}</span>
                </div>
            </div>

            <div class="section">
                <h3><i class="fas fa-briefcase me-2"></i>Offres d'emploi</h3>
                <p>
                    Nous avons actuellement <strong>{{ entreprise.fichesDePoste|length }}</strong> offre(s) d'emploi active(s).
                    <a href="{{ path('app_entreprise_dashboard') }}#offres" class="text-decoration-none">Voir nos offres</a>
                </p>
            </div>

            <div class="company-actions text-center">
                <a href="{{ path('app_entreprise_dashboard') }}" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-arrow-left me-2"></i>Retour au tableau de bord
                </a>
                <a href="{{ path('entreprise_profile_edit') }}" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Modifier les informations
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
