{% extends 'base.html.twig' %}

{% block title %}Inscription Entreprise{% endblock %}

{% block body %}
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-12">
                <div class="text-center mb-5 pb-2">
                    <h1 class="text-white">Inscription Entreprise</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-section section-padding" id="section_6">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-12 mx-auto">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'custom-form contact-form'}}) }}
                    <div class="row">
                        <div class="col-12">
                            <h4>Informations de connexion</h4>
                        </div>
                        
                        <div class="col-lg-12 col-12">
                            {{ form_row(form.user.email, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group mb-4'}
                            }) }}
                        </div>

                        <div class="col-lg-12 col-12">
                            {{ form_row(form.user.password, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group mb-4'}
                            }) }}
                        </div>

                        <div class="col-12 mt-4">
                            <h4>Informations de l'entreprise</h4>
                        </div>

                        <div class="col-12">
                            {{ form_row(form.entreprise.nom_entreprise, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group mb-4'}
                            }) }}
                        </div>

                        <div class="col-12">
                            {{ form_row(form.entreprise.localisation, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group mb-4'}
                            }) }}
                        </div>

                        <div class="col-12">
                            {{ form_row(form.entreprise.description, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group mb-4'}
                            }) }}
                        </div>

                        <div class="col-lg-12 col-12">
                            <button type="submit" class="btn custom-btn">S'inscrire</button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
