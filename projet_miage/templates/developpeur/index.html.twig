{% extends 'base.html.twig' %}

{% block title %}Espace Développeur{% endblock %}

{% block body %}
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-12">
                <div class="text-center mb-5 pb-2">
                    <h1 class="text-white">Bienvenue {{ developpeur.prenom }} {{ developpeur.nom }}</h1>
                    <p class="text-white">Voici les dernières offres qui correspondent à votre profil</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="projects-section section-padding" id="section_4">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12 mx-auto">
                <div class="section-title-wrap mb-5">
                    <h2 class="section-title">Offres Recommandées</h2>
                    <div class="section-title-bottom">
                        <span class="section-title-line"></span>
                        <span class="section-title-line"></span>
                        <span class="section-title-line"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row projects-row">
            {% if fiches_poste is empty %}
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        Aucune offre ne correspond à votre profil pour le moment.
                    </div>
                </div>
            {% else %}
                {% for fiche in fiches_poste %}
                    <div class="col-lg-4 col-12 mb-4">
                        <div class="custom-block bg-white shadow-lg">
                            <div class="d-flex flex-column h-100">
                                <div class="custom-block-info">
                                    <h5 class="mb-2">{{ fiche.titre }}</h5>
                                    <p class="mb-0">{{ fiche.description|slice(0, 100) }}...</p>
                                    <div class="mt-3">
                                        <span class="badge bg-primary me-2">{{ fiche.langage.value }}</span>
                                        <span class="badge bg-secondary">{{ fiche.experience.value }}</span>
                                    </div>
                                    <div class="mt-3">
                                        <a href="#" class="btn custom-btn mt-2 mt-lg-3">Voir l'offre</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</section>

<section class="contact-section section-padding" id="section_5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12 mx-auto">
                <div class="section-title-wrap mb-5">
                    <h2 class="section-title">Mon Profil</h2>
                    <div class="section-title-bottom">
                        <span class="section-title-line"></span>
                        <span class="section-title-line"></span>
                        <span class="section-title-line"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 col-12">
                <div class="custom-block bg-white shadow-lg">
                    <div class="d-flex flex-column h-100">
                        <div class="custom-block-info">
                            <h5 class="mb-3">Informations</h5>
                            <p><strong>Localisation:</strong> {{ developpeur.localisation }}</p>
                            <p><strong>Langage:</strong> {{ developpeur.langage.value }}</p>
                            <p><strong>Expérience:</strong> {{ developpeur.experience.value }}</p>
                            <p><strong>Salaire souhaité:</strong> {{ developpeur.salaire }}€</p>
                            <div class="mt-3">
                                <a href="{{ path('app_dev_profile') }}" class="btn custom-btn mt-2 mt-lg-3">Modifier mon profil</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-12">
                <div class="custom-block bg-white shadow-lg">
                    <div class="d-flex flex-column h-100">
                        <div class="custom-block-info">
                            <h5 class="mb-3">Biographie</h5>
                            <p>{{ developpeur.biographie ?? 'Aucune biographie renseignée.' }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
